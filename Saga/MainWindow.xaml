<Window x:Class="Saga.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mapsui="clr-namespace:Mapsui.UI.Wpf;assembly=Mapsui.UI.Wpf"
        xmlns:local="clr-namespace:Saga"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <mapsui:MapControl x:Name="mapControl" Grid.Column="0" />

        <Border Grid.Column="1" Background="#2D2D30" MinWidth="250" Padding="15" 
            BorderBrush="#3E3E42" BorderThickness="1,0,0,0">
            <StackPanel x:Name="DetailPanel" Visibility="Hidden">
                <TextBlock Text="TRACK DETAILS" Foreground="White" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                <TextBlock Text="Callsign:" Foreground="#AAAAAA" FontSize="12"/>
                <TextBlock x:Name="TxtCallsign" Text="-" Foreground="White" FontSize="18" Margin="0,0,0,10"/>

                <TextBlock Text="Grid Ref:" Foreground="#AAAAAA" FontSize="12"/>
                <TextBlock x:Name="TxtLocation" Text="-" Foreground="#00CCFF" FontFamily="Consolas" Margin="0,0,0,10"/>

                <TextBlock Text="Status:" Foreground="#AAAAAA" FontSize="12"/>
                <TextBlock x:Name="TxtStatus" Text="-" Foreground="Red" FontWeight="Bold" Margin="0,0,0,20"/>

                <Button Content="CLOSE INTEL" Click="ClosePanel_Click" Padding="5" Background="#444" Foreground="White"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
