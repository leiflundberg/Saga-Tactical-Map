<Window x:Class="Saga.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mapsui="clr-namespace:Mapsui.UI.Wpf;assembly=Mapsui.UI.Wpf"
        xmlns:local="clr-namespace:Saga"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <mapsui:MapControl x:Name="mapControl" Grid.Column="0" />

        <Border Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Top" 
                Background="#80000000" Margin="10" Padding="10" CornerRadius="4">
            <StackPanel Orientation="Horizontal">
                <CheckBox x:Name="ChkAir" Content="Show Air" Foreground="White" IsChecked="True" Margin="0,0,15,0"
                          Checked="Filter_Changed" Unchecked="Filter_Changed"/>
                <CheckBox x:Name="ChkSea" Content="Show Sea" Foreground="White" IsChecked="True"
                          Checked="Filter_Changed" Unchecked="Filter_Changed"/>
            </StackPanel>
        </Border>

        <Border x:Name="DebugOverlay" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Bottom" 
            Background="#80000000" Margin="10" Padding="5" CornerRadius="4"
            IsHitTestVisible="False">
            <TextBlock x:Name="TxtDebug" Foreground="#00FF00" FontFamily="Consolas" FontSize="12"
                   Text="Initializing..."/>
        </Border>

        <Border Grid.Column="1" Background="#2D2D30" MinWidth="250" Padding="15" 
        BorderBrush="#3E3E42" BorderThickness="1,0,0,0">
            <StackPanel x:Name="DetailPanel" Visibility="Hidden">
                <TextBlock Text="TRACK DETAILS" Foreground="White" FontWeight="Bold" FontSize="16" Margin="0,0,0,15"/>

                <TextBlock Text="Callsign:" Foreground="#AAAAAA" FontSize="12"/>
                <TextBlock x:Name="TxtCallsign" Text="-" Foreground="White" FontSize="24" FontWeight="Bold" Margin="0,0,0,15"/>

                <TextBlock Text="Origin / Country:" Foreground="#AAAAAA" FontSize="12"/>
                <TextBlock x:Name="TxtCountry" Text="-" Foreground="White" FontSize="14" Margin="0,0,0,10"/>

                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Altitude:" Foreground="#AAAAAA" FontSize="12"/>
                        <TextBlock x:Name="TxtAltitude" Text="-" Foreground="#00CCFF" FontSize="14" FontWeight="SemiBold"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Velocity:" Foreground="#AAAAAA" FontSize="12"/>
                        <TextBlock x:Name="TxtVelocity" Text="-" Foreground="#00CCFF" FontSize="14" FontWeight="SemiBold"/>
                    </StackPanel>
                </Grid>

                <TextBlock Text="Heading:" Foreground="#AAAAAA" FontSize="12"/>
                <TextBlock x:Name="TxtHeading" Text="-" Foreground="#00CCFF" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>

                <TextBlock Text="Grid Ref (Lat/Lon):" Foreground="#AAAAAA" FontSize="12"/>
                <TextBlock x:Name="TxtLocation" Text="-" Foreground="LightGray" FontFamily="Consolas" FontSize="14" Margin="0,0,0,15"/>

                <TextBlock Text="Status:" Foreground="#AAAAAA" FontSize="12"/>
                <TextBlock x:Name="TxtStatus" Text="-" Foreground="Red" FontWeight="Bold" FontSize="14" Margin="0,0,0,20"/>

                <Button Content="CLOSE INTEL" Click="ClosePanel_Click" Padding="8" Background="#444" Foreground="White" BorderThickness="0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
